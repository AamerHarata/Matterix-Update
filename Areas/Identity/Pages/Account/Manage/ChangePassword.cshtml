@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

@* <h4>@ViewData["Title"]</h4> *@
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row un-select">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            
            <input asp-for="Input.Ip" hidden="hidden" id="ip"/>
            <input asp-for="Input.DeviceType" hidden="hidden" id="deviceType"/>
            <input asp-for="Input.OperatingSystem" hidden="hidden" id="operatingSystem"/>
            <input asp-for="Input.AuthCookies" hidden="hidden" id="authCookies"/>
            
            
            <div class="Matterix-color display-4 title-2-0">{{$t('message.changePassword')}}</div>
            <hr/>
            @* <div asp-validation-summary="All" class="text-danger"></div> *@
            <div class="form-group">
                <label asp-for="Input.OldPassword">{{$t('message.currentPassword')}}</label>
                <input autocomplete="off" asp-for="Input.OldPassword" class="form-control"/>
                <span class="text-danger">@Html.ValidationMessage("wrongOldPassword") @Html.ValidationMessage("error")</span>
                @* <span asp-validation-for="Input.OldPassword" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Input.NewPassword">{{$t('message.newPassword')}}</label>
                <input asp-for="Input.NewPassword" class="form-control"/>
                <span class="text-danger" id="password-validation"></span>
                @* <span asp-validation-for="Input.NewPassword" id="password-validation" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">{{$t('message.confirmPassword')}}</label>
                <input asp-for="Input.ConfirmPassword" class="form-control"/>
                @* <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> *@
                <span class="text-danger" id="no-match-validation">@Html.ValidationMessage("noMatch")</span>
            </div>
            <button type="button" id="update-password" class="btn btn-primary">{{$t('message.updatePassword')}}</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/IdentityArea/ChangePassword.js"></script>
    <script src="~/js/Validation.js"></script>
    <script src="~/js/UserDeviceInfo.js"></script>
}