@model Matterix.Models.ViewModel.PaymentViewModel


<div class="container-fluid row" id="payCard">
    <div class="col-sm-4"></div>
    
    
    <div class="col-sm-4 direction" style="border: ridge; width: 100%; margin: auto;">
        <div class=" container-fluid text-center" style="padding: 1rem;">
            <img src="~/Images/LogoHomePage.png" width="50%" height="auto" style="margin: auto; vertical-align: middle"/>

        </div>
        <hr class="matterix-background"/>
        
        
            <div class="form-group">
                <input type="text" value="@Model.Student.FirstName @Model.Student.LastName" class="form-control " id="card-name" placeholder="Card Name">
            </div>
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" asp-for="Student.PhoneNumber" id="phone" placeholder="Phone Number">
            </div>
            <div class="form-group">
                <div id="card-number">
                    <!-- A Stripe Element will be inserted here. -->
                </div>
            </div>
            <img src="~/Images/Visa_master.png" width="35%" aligin="middle">
            <div class="p-3"></div>
            <div class="form-group">

                <div class="row text-center">
                    <div class="col-6">
                        <div id="card-cvc">
                            <!-- A Stripe Element will be inserted here. -->
                        </div>
                    </div>

                    <div class="col-6">
                        <div id="card-exp">
                            <!-- A Stripe Element will be inserted here. -->
                        </div>
                    </div>
                </div>
            </div>
            <div id="card-errors" role="alert">
            
            </div>
        
            <button class="form-control btn btn-success" id="pay-with-stripe-btn" type="submit"></button>
        <div class="p-3"></div>
        
        
        
    </div>
    
    
    
    
    <div class="col-4"></div>
</div>
