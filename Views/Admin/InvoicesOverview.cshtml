
@{
    ViewBag.Title = "Invoices";
    Layout = "_Layout";
}

<div class="un-select text-center p-2">
    <div class="display-4 title-2-0">Invoices Overview</div>
    <div class="d-flex justify-content-center m-2">
        <div target="active" class="check"><label>Active</label>&nbsp;<input id="active" class="form-check d-inline" type="checkbox"/></div>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <div target="due" class="check"><label>Due</label>&nbsp;<input id ="due" class="form-check d-inline" type="checkbox"/></div>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <div target="late" class="check"><label>Late</label>&nbsp;<input id="late" class="form-check d-inline" type="checkbox"/></div>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <div target="dueToday" class="check"><label>Due Today</label>&nbsp;<input id="dueToday" checked="checked" class="form-check d-inline" type="checkbox"/></div>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <div target="lateToday" class="check"><label>Late Today</label>&nbsp;<input id="lateToday" checked="checked" class="form-check d-inline" type="checkbox"/></div>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <div target="everything" class="check"><label>Everything</label>&nbsp;<input id="everything" class="form-check d-inline" type="checkbox"/></div>
    </div>
    <hr class="matterix-background w-75"/>
    <form>
        <input class="form-control w-50 m-auto" id="search-input"/></form>
</div>
<div id="results">
    
    
    
</div>

<partial name="PartialViews/_SharedModal"/>

@section Scripts
{
    <script src="~/js/Admin/InvoicesOverview.js" asp-append-version="true"></script>
}
